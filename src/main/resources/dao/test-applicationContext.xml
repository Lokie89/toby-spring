<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/testtobyspring?useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="1111"/>
    </bean>

    <bean id="userDao" class="dao.UserDaoJdbc">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="jdbcContext" class="dao.JdbcContext">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="generalUserLevelUpgradePolicy" class="dao.GeneralUserLevelUpgradePolicy">
        <property name="mailSender" ref="mailSender"/>
    </bean>

    <bean id="userService" class="dao.UserService">
        <property name="userDao" ref="userDao"/>
        <property name="userLevelUpgradePolicy" ref="generalUserLevelUpgradePolicy"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="testUserService" class="dao.TestUserService">
        <property name="userDao" ref="userDao"/>
        <property name="userLevelUpgradePolicy" ref="generalUserLevelUpgradePolicy"/>
    </bean>

    <bean id="mailSender" class="dao.DummyMailSender"/>
</beans>